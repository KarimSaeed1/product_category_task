{
  "compilerOptions": {
      "outDir": "dist",
      "rootDirs": ["src"],
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,    
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}